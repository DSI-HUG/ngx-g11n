{
    "name": "ngx-g11n-workspace",
    "private": true,
    "scripts": {
        "ncu": "npx npm-check-updates -i --format=group --packageFile '{,projects/**/}package.json'",
        "prepare": "husky || true",
        "lint": "eslint . --fix",
        "lint:ci": "eslint .",
        "prettier": "prettier . --write",
        "prettier:ci": "prettier . --check"
    },
    "workspaces": [
        "projects/demo-app",
        "projects/lib"
    ],
    "dependencies": {
        "@angular/animations": "^20.0.5",
        "@angular/cdk": "^20.0.4",
        "@angular/common": "^20.0.5",
        "@angular/core": "^20.0.5",
        "@angular/forms": "^20.0.5",
        "@angular/localize": "^20.0.5",
        "@angular/material": "^20.0.4",
        "@angular/material-date-fns-adapter": "^20.0.4",
        "@angular/platform-browser": "^20.0.5",
        "@angular/router": "^20.0.5",
        "date-fns": "^4.1.0",
        "rxjs": "7.8.2",
        "zone.js": "~0.15.1"
    },
    "devDependencies": {
        "@angular/build": "^20.0.4",
        "@angular/cli": "~20.0.4",
        "@angular/compiler": "^20.0.5",
        "@angular/compiler-cli": "^20.0.5",
        "@angular/platform-browser-dynamic": "^20.0.5",
        "@colors/colors": "^1.6.0",
        "@commitlint/cli": "^19.8.1",
        "@commitlint/config-conventional": "^19.8.1",
        "@hug/eslint-config": "^20.3.3",
        "@types/jasmine": "~5.1.8",
        "cpy": "^11.1.0",
        "cross-spawn": "^7.0.6",
        "fs-extra": "^11.3.0",
        "husky": "^9.1.7",
        "jasmine": "^5.8.0",
        "jasmine-core": "~5.8.0",
        "jasmine-spec-reporter": "^7.0.0",
        "karma": "~6.4.4",
        "karma-chrome-launcher": "~3.2.0",
        "karma-coverage": "~2.2.1",
        "karma-jasmine": "~5.1.0",
        "karma-jasmine-html-reporter": "~2.1.0",
        "lint-staged": "^16.1.2",
        "ng-packagr": "^20.0.1",
        "prettier": "3.6.2",
        "prettier-plugin-multiline-arrays": "^4.0.3",
        "ts-node-dev": "^2.0.0",
        "tslib": "^2.8.1",
        "typescript": "~5.8"
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ],
        "rules": {
            "type-enum": [
                2,
                "always",
                [
                    "build",
                    "chore",
                    "ci",
                    "docs",
                    "feat",
                    "fix",
                    "perf",
                    "refactor",
                    "revert",
                    "style",
                    "test",
                    "deps"
                ]
            ]
        }
    },
    "lint-staged": {
        "**/*.{js,ts,html,json}": [
            "npm run lint"
        ],
        "**/*.{scss,html,json}": [
            "npm run prettier"
        ]
    },
    "engines": {
        "yarn": "Please use Npm instead of Yarn."
    },
    "packageManager": "npm@11.4.2"
}
